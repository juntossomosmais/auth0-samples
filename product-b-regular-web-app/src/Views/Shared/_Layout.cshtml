<!DOCTYPE html>
<html lang="en">
<head>
    @if (@ViewData["Title"] != null)
    {
        <title>Produto B - @ViewData["Title"]</title>
    }
    else
    {
        <title>Produto B</title>
    }
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

<div class="container py-3">
    <header>
        <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom">
            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-dark text-decoration-none">
                <span class="fs-4">Produto B</span>
            </a>

            <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Claims" class="me-3 py-2 text-dark text-decoration-none">Perfil</a>
                    <a asp-controller="Account" asp-action="Logout" class="me-3 py-2 text-dark text-decoration-none">Logout</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="me-3 py-2 text-dark text-decoration-none">Entrar</a>
                }
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="pt-4 pt-md-5 border-top">
        <div class="container">
            &copy; @DateTime.Now.Year - Produto 🅱
        </div>
    </footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
