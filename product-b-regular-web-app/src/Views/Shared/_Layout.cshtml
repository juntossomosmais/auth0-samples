<!DOCTYPE html>
<html lang="en">
<head>
    @if (@ViewData["Title"] != null)
    {
        <title>Product B - @ViewData["Title"]</title>
    }
    else
    {
        <title>Product B</title>
    }
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<header>
    <div class="container">
        <h1>Product A</h1>
        <nav>
            <ul class="right hide-on-med-and-down">
                <li>
                    <a asp-controller="Home" asp-action="Index">Home page</a>
                </li>
                @if (User.Identity!.IsAuthenticated)
                {
                    <li><a asp-controller="Account" asp-action="Claims">See your claims</a></li>
                    <li><a asp-controller="Account" asp-action="Profile">Profile</a></li>
                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li>
                        <a asp-controller="Account" asp-action="Login">Login Auth Code Flow</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</header>

<hr/>

<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - Product B
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>